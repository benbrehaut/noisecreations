{% set generalContent = component %}

{% if generalContent.generalContentContent %}
<section class="c-general-content">
  <div class="l-wrap">
    <div class="l-col l-col--sm-12 l-col--md-12 l-col--lg-10 l-col--lg-offset-1">
      <article class="c-general-content__content wysiwyg">
        {% if generalContent.generalContentTitle %}
          <h2>{{ generalContent.generalContentTitle }}</h2>
        {% endif %}
        {{ generalContent.generalContentContent }}
      </article>
    </div>
  </div>
</section>
{% endif %}