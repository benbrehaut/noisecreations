<dl class="js-accordion o-accordion" role="presentation">
  <dt class="o-accordion__heading js-accordion-heading" role="heading" aria-level="3">
    <button id="purchaseInfoHeading" type="button" class="js-accordion-btn o-accordion__btn u-text-caps u-text-l is-active" aria-controls="purchaseInfoContent" aria-expanded="true">Purchase At</button>
    <span class="o-accordion__icon" aria-hidden="true"></span>
  </dt>
  <dd id="purchaseInfoContent" class="js-accordion-panel o-accordion__panel is-active" aria-hidden="false" aria-labelledby="purchaseInfoHeading" role="region">
    <p>Purchase at locations</p>
    <div>
      <a href="{{ globalSettings.soundEffectsUrl }}" target="_blank" rel="noopener">
        <img src="/assets/dist/img/sound-effect-logo.png" alt="Sound Effect logo" width="200" height="40">
      </a>
    </div>
    <br>
    <div>
      <a href="{{ globalSettings.sonnissUrl }}" target="_blank" rel="noopener">
        <img src="/assets/dist/img/sonniss-logo.png" alt="Sonniss logo" width="80" height="80">
      </a>
    </div>
  </dd>
  <dt class="o-accordion__heading js-accordion-heading" role="heading" aria-level="3">
    <button id="purchaseInfoHeading" type="button" class="js-accordion-btn o-accordion__btn u-text-caps u-text-l" aria-controls="purchaseInfoContent" aria-expanded="false">Purchase Information</button>
    <span class="o-accordion__icon" aria-hidden="true"></span>
  </dt>
  <dd id="purchaseInfoContent" class="js-accordion-panel o-accordion__panel" aria-hidden="true" aria-labelledby="purchaseInfoHeading" role="region">
    {{ globalSettings.purchaseInformation }}
  </dd>
  <dt class="o-accordion__heading js-accordion-heading" role="heading" aria-level="3">
    <button id="purchaseInfoHeading" type="button" class="js-accordion-btn o-accordion__btn u-text-caps u-text-l" aria-controls="purchaseInfoContent" aria-expanded="false">Copyright Notice</button>
    <span class="o-accordion__icon" aria-hidden="true"></span>
  </dt>
  <dd id="purchaseInfoContent" class="js-accordion-panel o-accordion__panel" aria-hidden="true" aria-labelledby="purchaseInfoHeading" role="region">
    {{ globalSettings.copyrightNotice }}
  </dd>
</dl>