{#
 # Meta template
 # ---------------
 #
 # This template defines your site’s global layout. It can be
 # “extended” by other templates to fill in the gaps.
 #
 # See Twig’s Template Inheritance documentation for more details:
 # http://twig.sensiolabs.org/doc/templates.html#template-inheritance
 #}

  {% set assetPath = '/assets/' %}

   {# Main Meta Tags #}
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width">
     <meta http-equiv="X-UA-Compatible" content="ie=edge">
   {# /Main Meta Tags #}
   
   {# title #}
     {% if metaTitle|length %} 
       <title>{{ metaTitle }} | {{ siteName }}</title>
     {% else %}
       <title>{{ title }} | {{ siteName }}</title>
     {% endif %}
   {# /title #}
 
   {# meta description #}
     {% if metaDescription is defined %} 
       <meta name="description" content="{{ metaDescription }}">
     {% endif %}
   {# /meta description #}
 
   {# facebook tags #}
     <meta property="og:locale" content="en-GB">
     <meta property="og:type" content="website">
     {% if metaTitle is defined %}
       <meta property="og:title" content="{{ metaTitle }}">
     {% elseif title is defined %}
       <meta property="og:title" content="{{ title }}">
     {% endif %}
     {% if metaDescription is defined %} 
       <meta name="og:description" content="{{ metaDescription }}">
     {% endif %}
 
     <meta property="og:url" content="{{ url(craft.app.request.pathInfo) }}">
     <meta property="og:site_name" content="{{ siteName }}">
 
     {% if metaBanner is defined %}
       <meta property="og:image" content="{{ metaBanner }}">
     {% endif %}
   {# /facebook tags #}
 
   {# twitter tags #}
     <meta name="twitter:card" content="summary">
     {% if metaTitle is defined %} 
       <meta property="twitter:title" content="{{ metaTitle }}">
     {% elseif title is defined %}
       <meta property="twitter:title" content="{{ title }}">
     {% endif %}
 
     {% if metaDescription is defined %} 
       <meta name="twitter:description" content="{{ metaDescription }}">
     {% endif %}
 
     <meta name="twitter:domain" content="{{ siteName }}">
     {% if metaBanner is defined %}
       <meta name="twitter:image:src" content="{{ metaBanner }}">
     {% endif %}
   {# /twitter tags #}
 
   {# Home / Canoical #}
     <link rel="home" href="{{ siteUrl }}" />
     <link rel="canonical" href="{{ url(craft.app.request.pathInfo) }}" />
   {# /Home / Canoical #}
   
   {# Favicons #}
     {# Apple #}
       <link rel="apple-touch-icon-precomposed" href="{{assetPath}}favicons/apple-icon-precomposed.png">
       <link rel="apple-touch-icon" sizes="57x57" href="{{ assetPath }}favicons/apple-icon-57x57.png">
       <link rel="apple-touch-icon" sizes="114x114" href="{{ assetPath }}favicons/apple-icon-114x114.png">
       <link rel="apple-touch-icon" sizes="72x72" href="{{ assetPath }}favicons/apple-icon-72x72.png">
       <link rel="apple-touch-icon" sizes="144x144" href="{{ assetPath }}favicons/apple-icon-144x144.png">
       <link rel="apple-touch-icon" sizes="60x60" href="{{ assetPath }}favicons/apple-icon-60x60.png">
       <link rel="apple-touch-icon" sizes="120x120" href="{{ assetPath }}favicons/apple-icon-120x120.png">
       <link rel="apple-touch-icon" sizes="76x76" href="{{ assetPath }}favicons/apple-icon-76x76.png">
       <link rel="apple-touch-icon" sizes="152x152" href="{{ assetPath }}favicons/apple-icon-152x152.png">
       <link rel="apple-touch-icon" sizes="180x180" href="{{ assetPath }}favicons/apple-icon-180x180.png">
       <link rel="mask-icon" href="{{ assetPath }}favicons/safari-pinned-tab.svg" color="#000c24">
     {# /Apple #}
     {# General Favicons #}
       <link rel="shortcut icon" href="{{ assetPath }}favicons/favicon.ico">
       <link rel="icon" type="image/png" href="{{ assetPath }}favicons/favicon-192x192.png" sizes="192x192">
       <link rel="icon" type="image/png" href="{{ assetPath }}favicons/favicon-160x160.png" sizes="160x160">
       <link rel="icon" type="image/png" href="{{ assetPath }}favicons/favicon-96x96.png" sizes="96x96">
       <link rel="icon" type="image/png" href="{{ assetPath }}favicons/favicon-16x16.png" sizes="16x16">
       <link rel="icon" type="image/png" href="{{ assetPath }}favicons/favicon-32x32.png" sizes="32x32">
     {# /General Favicons #}
     {# MS #}
       <meta name="msapplication-TileColor" content="#000c24">
       <meta name="msapplication-TileImage" content="{{ assetPath }}favicons/ms-icon-144x144.png">
     {# /MS #}
     {# Misc #}
       <meta name="theme-color" content="#000c24">
       <link rel="manifest" href="/manifest.json">
     {# /Misc #}

      <link rel="preload" href="{{ assetPath }}src/fonts/GothamRounded-Book.woff2" as="font" type="font/woff2" crossorigin="anonymous">
      <link rel="preload" href="{{ assetPath }}src/fonts/GothamRounded-Medium.woff2" as="font" type="font/woff2" crossorigin="anonymous">
   {# /Favicons #}