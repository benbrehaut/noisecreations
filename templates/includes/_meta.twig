 # “extended” by other templates to fill in the gaps.
 #
 # See Twig’s Template Inheritance documentation for more details:
 # http://twig.sensiolabs.org/doc/templates.html#template-inheritance
 #}

  {% set assetPath = '/assets/' %}

   {# Main Meta Tags #}
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width">
     <meta http-equiv="X-UA-Compatible" content="ie=edge">
   {# /Main Meta Tags #}
   
   {# title #}
     {% if metaTitle|length %} 
       <title>{{ metaTitle }} | {{ siteName }}</title>
     {% else %}
       <title>{{ title }} | {{ siteName }}</title>
     {% endif %}
   {# /title #}
 
   {# meta description #}
     {% if metaDescription is defined %} 
       <meta name="description" content="{{ metaDescription }}">
     {% endif %}
   {# /meta description #}
 
   {# facebook tags #}
     <meta property="og:locale" content="en-GB">
     <meta property="og:type" content="website">
     {% if metaTitle is defined %}
       <meta property="og:title" content="{{ metaTitle }}">
     {% elseif title is defined %}
       <meta property="og:title" content="{{ title }}">
     {% endif %}
     {% if metaDescription is defined %} 
       <meta name="og:description" content="{{ metaDescription }}">
     {% endif %}
 
     <meta property="og:url" content="{{ url(craft.app.request.pathInfo) }}">
     <meta property="og:site_name" content="{{ siteName }}">
 
     {% if metaBanner is defined %}
       <meta property="og:image" content="{{ metaBanner }}">
     {% endif %}
   {# /facebook tags #}
 
   {# twitter tags #}
     <meta name="twitter:card" content="summary">
     {% if metaTitle is defined %} 
       <meta property="twitter:title" content="{{ metaTitle }}">
     {% elseif title is defined %}
       <meta property="twitter:title" content="{{ title }}">
     {% endif %}
 
     {% if metaDescription is defined %} 
       <meta name="twitter:description" content="{{ metaDescription }}">
     {% endif %}
 
     <meta name="twitter:domain" content="{{ siteName }}">
     {% if metaBanner is defined %}
       <meta name="twitter:image:src" content="{{ metaBanner }}">
     {% endif %}
   {# /twitter tags #}
 
   {# Home / Canoical #}
     <link rel="home" href="{{ siteUrl }}" />
     <link rel="canonical" href="{{ url(craft.app.request.pathInfo) }}" />
   {# /Home / Canoical #}
   
      <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
      <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
      <link rel="manifest" href="/site.webmanifest">
      <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#2c2c2c">
      <meta name="msapplication-TileColor" content="#ffffff">
      <meta name="theme-color" content="#ffffff">

      <link rel="preload" href="{{ assetPath }}src/fonts/GothamRounded-Book.woff2" as="font" type="font/woff2" crossorigin="anonymous">
      <link rel="preload" href="{{ assetPath }}src/fonts/GothamRounded-Medium.woff2" as="font" type="font/woff2" crossorigin="anonymous">
   {# /Favicons #}